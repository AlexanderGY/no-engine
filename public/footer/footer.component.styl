.footer
  background: #212121
  width: 100%
  min-height: 25vh
  padding: 0 15%
  box-sizing: border-box
  position: absolute
  bottom: 0
  &__block
    width: 25%
    padding: 20px
    color: #ffffff
    float: left
    box-sizing: border-box
    list-style: none
    & li
      &:nth-of-type(1)
        font-weight: 600
        font-size: 1.2em
        margin-bottom: 5px
  &__copyrights
    position: absolute
    bottom: 10px
    text-align: center
    left: 0
    right: 0
    margin: auto
    width: 200px
    color: #ffffff
